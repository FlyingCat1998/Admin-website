<!-- BEGIN CONTENT BODY -->
<div class="page-content-wrapper">
    <div class="content-wrapper container">
        <div class="row">
            <div class="col-sm-12">
                <div class="page-title">


                    <h4 class="float-left">Danh sách đơn đặt hàng</h4>


                    <ol class="breadcrumb float-left float-md-right">
                        <li class="breadcrumb-item"><a href="javascript: void(0);"><i class="fa fa-home"></i></a></li>
                        <li class="breadcrumb-item">danh-sach-don-dat-hang</li>
                    </ol>


                </div>
            </div>
        </div><!-- end .page title-->

        <div class="row">
            <div class="col-sm-12">
                <div class="row justify-content-end margin-bottom-10">
                    <a href="them_don_hang">
                        <button  type="button" id="add-product" class="btn btn-success float-right"><i class="fa fa-plus"></i> Thêm đơn hàng</button>
                    </a>
                </div>
                <form method="post" enctype="multipart/form-data" target="_blank" id="form-order">
                    <div class="table-responsive">
                        <table id="basic-datatables" class="table table-bordered table-hover" style="width:100%">
                            <thead>
                            <tr>
                                <td class="text-right">ID</td>
                                <td class="text-left">Tên khách hàng</td>
                                <td class="text-left">Sản phẩm </br>đã mua</td>
                                <td class="text-right">Số điện thoại</td>
                                <td class="text-right">Tổng chi phí</td>
                                <td class="text-left">Tình trạng</td>
                                <td class="text-left">Ngày đặt hàng</td>
                                <td class="text-left">Ngày nhận</td>
                                <td class="text-right">Tuỳ chỉnh</td>
                            </tr>
                            </thead>
                            <tbody>
                            {{#each orders}}
                                <tr>
                                    <td class="text-right"><a href="chinh_sua_don_hang/{{this.oid}}">{{this.oid}}</a></td>
                                    <td class="text-left">{{this.name}}</td>
                                    <td class="text-left">{{this.productName}}</td>
                                    <td class="text-right">{{this.phonenumber}}</td>
                                    <td class="text-right">{{this.total}} đồng</td>
                                    <td class="text-left"><span class="tag label-info">{{this.status}}</span></td>
                                    <td class="text-left">{{this.orderdate}}</td>
                                    <td class="text-left">{{this.deliverdate}}</td>
                                    <td class="text-right">
                                        <a href="chinh_sua_don_hang/{{this.oid}}" data-toggle="tooltip" title="" class="btn btn-primary" data-original-title="Edit"><i class="fa fa-pencil"></i></a>
                                        <a href="xoa_don_hang/{{this.oid}}" onclick="return confirm('Bạn có chắc là muốn xoá đơn hàng này?')"  data-toggle="tooltip" title="" class="btn btn-danger" data-original-title="Delete"><i class="fa fa-trash-o"></i></a>
                                    </td>
                                </tr>
                            {{/each}}
                            </tbody>
                        </table>
                    </div>
                </form>
            </div>
        </div>
        <div class="clearfix"></div>
    </div>

    <!-- END CONTENT BODY -->
<!-- BEGIN CONTENT BODY -->
<div class="page-content-wrapper">
    <div class="content-wrapper container">
        <div class="row">
            <div class="col-sm-12">
                <div class="page-title">

                    <h4 class="float-left">Danh sách thể loại</h4>

                    <ol class="breadcrumb float-left float-md-right">
                        <li class="breadcrumb-item"><a href="javascript: void(0);"><i class="fa fa-home"></i></a></li>
                        <li class="breadcrumb-item">danh-sach-the-loai</li>
                    </ol>
                </div>
            </div>
        </div><!-- end .page title-->

        <div class="row">
            <div class="col-sm-12">
                <form  method="post" enctype="multipart/form-data" id="form-product" class="">
                    <div class="table-responsive">
                        <table class="table table-bordered table-hover">
                            <thead>
                            <tr>
                                <td class="text-center">ID</td>
                                <td class="text-left">Tên thể loại</td>
                                <td class="text-right">Tuỳ chỉnh</td>
                            </tr>
                            </thead>
                            <tbody>
                            {{#if categories}}
                                {{#each categories}}
                                    <tr>
                                        <td class="text-center"><a href="chinh_sua_the_loai/{{this.id}}">{{this.id}}</td>
                                        <td class="text-left"><a href="chinh_sua_the_loai/{{this.id}}">{{this.name}}</td>
                                        <td class="text-right">
                                            <a href="chinh_sua_the_loai/{{this.id}}" data-toggle="tooltip" title="" class="btn btn-primary" data-original-title="Edit"><i class="fa fa-pencil"></i></a>
                                            <a href="xoa_the_loai/{{this.id}}" onclick="return confirm('Bạn có chắc là muốn xoá thể loại này?')" data-toggle="tooltip" title="" class="btn btn-danger" data-original-title="Xoá"><i class="fa fa-trash"></i></a>
                                        </td>
                                    </tr>
                                {{/each}}
                            {{/if}}
                            </tbody>
                        </table>
                    </div>
                </form>
                <div class="row justify-content-end margin-bottom-10">
                    <a href="them_the_loai">
                        <button  type="button" id="add-product" class="btn btn-success float-right"><i class="fa fa-plus"></i> Thêm thể loại</button>
                    </a>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-6 text-left"></div>
            <div class="col-sm-6 text-right">Hiển thị từ 1 đến 6 trong 6 (1 trang)</div>
        </div>

        <div class="clearfix"></div>
    </div>
    <!-- END CONTENT BODY -->
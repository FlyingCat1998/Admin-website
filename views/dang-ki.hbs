<body class="account-register">
<div class="container">
    <div class="row">
        <div class="account-col text-center">
            <h1>Double T</h1>
            <h3>Tạo mới tài khoản</h3>
            <form class="m-t" action="trang-chu">
                <div class="form-group row">
                    <input type="text" class="form-control" placeholder="Tên đăng nhập" required=""
                           title="Hãy điền tên đăng nhập của bạn"
                           oninvalid="this.setCustomValidity('Vui lòng điền tên đăng nhập của bạn')"
                           oninput="setCustomValidity('')">
                </div>
                <div class="form-group row">
                    <input type="email" class="form-control" placeholder="Email" required=""
                           title="Hãy điền email của bạn"
                           oninvalid="this.setCustomValidity('Vui lòng điền email của bạn')"
                           oninput="setCustomValidity('')">
                </div>
                <div class="form-group row">
                    <input type="text" class="form-control" placeholder="Họ tên" required=""
                           title="Hãy điền họ tên của bạn"
                           oninvalid="this.setCustomValidity('Vui lòng điền họ tên của bạn')"
                           oninput="setCustomValidity('')">
                </div>
                <div class="form-group row">
                    <input type="password" class="form-control" placeholder="Mật khẩu" required=""
                           title="Hãy điền tên mật khẩu của bạn"
                           oninvalid="this.setCustomValidity('Vui lòng điền mật khẩu của bạn')"
                           oninput="setCustomValidity('')">
                </div>
                <div class="form-group row">
                    <input type="password" class="form-control" placeholder="Nhập lại mật khẩu" required=""
                           title="Hãy nhập lại mật khẩu của bạn"
                           oninvalid="this.setCustomValidity('Vui lòng nhập lại mật khẩu của bạn')"
                           oninput="setCustomValidity('')">
                </div>
                <div class="form-group row">
                    <input type="text" class="form-control" placeholder="Số điện thoại" required=""
                           title="Hãy điền số điện thoại của bạn"
                           oninvalid="this.setCustomValidity('Vui lòng điền số điện thoại của bạn')"
                           oninput="setCustomValidity('')">
                </div>
                <div class="form-group row">
                    <input type="text" class="form-control" placeholder="Địa chỉ" required=""
                           title="Hãy điền địa chỉ của bạn"
                           oninvalid="this.setCustomValidity('Vui lòng điền địa chỉ của bạn')"
                           oninput="setCustomValidity('')">
                </div>
                <button type="submit" class="btn btn-primary btn-block ">Đăng ký</button>
                <a href="#"><small></small></a>
                <p class=" text-center"><small>Đã có tài khoản?</small></p>
                <a class="btn  btn-secondary btn-block" href="dang-nhap">Đăng nhập vào tài khoản</a>
                <p>Double T's Admin Website</strong> 2019</p>
            </form>
        </div>
    </div>
</div>
